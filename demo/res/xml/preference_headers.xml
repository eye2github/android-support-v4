<!-- This is a primitive example showing the different types of preferences available. -->

<preference-headers
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:delicacyset="http://schemas.android.com/apk/res/android.support.v4">

    <header delicacyset:fragment="android.support.v4.PreferenceWithHeaders$Prefs1Fragment"
            delicacyset:icon="@drawable/ic_settings_applications"
            delicacyset:title="Prefs 1"
            delicacyset:summary="An example of some preferences." />
            
    <header delicacyset:fragment="android.support.v4.PreferenceWithHeaders$Prefs2Fragment"
            delicacyset:icon="@drawable/ic_settings_display"
            delicacyset:title="Prefs 2"
            delicacyset:summary="Some other preferences you can see.">
        <!-- Arbitrary key/value pairs can be included with a header as
             arguments to its fragment. -->
        <extra android:name="someKey" android:value="someHeaderValue" />
    </header>

    <header delicacyset:icon="@drawable/ic_settings_display"
            delicacyset:title="Intent"
            delicacyset:summary="Launches an Intent.">
        <intent android:action="android.intent.action.VIEW"
                android:data="http://www.android.com" />
    </header>
    
</preference-headers>

